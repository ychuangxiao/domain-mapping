<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.banditcat.example"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".view.bottombar.ThreeTabsActivity" />
        <activity android:name=".view.bottombar.FiveColorChangingTabsActivity" android:theme="@style/AppTheme.TransNav" />
        <activity android:name=".view.bottombar.ThreeTabsQRActivity" android:theme="@style/AppTheme.TransNav" />
        <activity android:name=".view.bottombar.BadgeActivity" />
        <activity android:name=".view.bottombar.CustomColorAndFontActivity" />
    </application>

</manifest>